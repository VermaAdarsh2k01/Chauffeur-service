---
import '../styles/global.css';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer';
import AutoModalTrigger from '../components/AutoModalTrigger';
import { sanityClient } from '../lib/sanity';

// Fetch service pages for navigation
const servicePages = await sanityClient.fetch(`
  *[_type == "dynamicServicePage"] | order(title asc) {
    title,
    slug
  }
`);
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Navbar client:load servicePages={servicePages} />
		<main class="">
			<slot />
		</main>
		<Footer client:load />
		<AutoModalTrigger client:load />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

