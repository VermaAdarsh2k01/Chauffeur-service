---
import Layout from '../layouts/Layout.astro';
import ContactHero from "@/components/ContactHero";
import ContactForm from "@/components/ContactForm";
import ContactInfo from "@/components/ContactInfo";
---

<Layout>
    <ContactHero client:load 
        title="Get in Touch"
        subtitle="Contact Us"
        description="Ready to experience premium car rental services? We're here to help you with all your transportation needs."
    />
    
    <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
            <ContactForm client:load />
            <ContactInfo client:load />
        </div>
    </div>
</Layout>
